







<h2 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h2>


@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h2 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h2>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:medium">
                <th scope="col">
                    <label>Incident Type</label>
                </th>
                <th scope="col">
                    <label>Brief Description of the Incident </label>
                </th>
                <th scope="col">
                    <label>Brief Description of the Actions Taken</label>
                </th>
                <th scope="col">
                    <label>Notifications</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.BC_LTCSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                    <tr style="font-size:small;color:black">
                        <td scope="row">@ci.IncidentType</td>
                        <td scope="row">@ci.BriefDescIncid</td>
                        <td scope="row">@ci.BriefDescTaken</td>
                        <td scope="row">@ci.Notifications</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h2 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h2>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Incident Type</label>
                    </th>
                    <th scope="col">
                        <label>Brief Description of the Incident </label>
                    </th>
                    <th scope="col">
                        <label>Brief Description of the Actions Taken</label>
                    </th>
                    <th scope="col">
                        <label>Notifications</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.BC_LTCSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].CareComName == l)
                        {
                            <tr style="font-size:small;color:black">
                                <td scope="row">@Html.DisplayFor(m => list[ci].IncidentType)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].BriefDescIncid)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].BriefDescTaken)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Notifications)</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or other records for summary do NOT exist in this table...</h3>
}













