


<h2 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h2>


@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h2 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h2>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:medium">
                <th scope="col">
                    <label>Inspected By</label>
                </th>
                <th scope="col">
                    <label>Inspection Number</label>
                </th>
                <th scope="col">
                    <label>Number Of Violations</label>
                </th>
                <th scope="col">
                    <label>Notes Comments</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.OtherSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                    <tr style="font-size:small;color:black">
                        <td scope="row">@ci.Inspected_By</td>
                        <td scope="row">@ci.Inspection_Number</td>
                        <td scope="row">@ci.Number_of_Violations</td>
                        <td scope="row">@ci.Notes_Comments</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h2 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h2>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Inspected By</label>
                    </th>
                    <th scope="col">
                        <label>Inspection Number</label>
                    </th>
                    <th scope="col">
                        <label>Number Of Violations</label>
                    </th>
                    <th scope="col">
                        <label>Notes Comments</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.OtherSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].Location == l)
                        {
                                <tr style="font-size:small;color:black">
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Inspected_By)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Inspection_Number)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Number_of_Violations)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Notes_Comments)</td>
                                </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or another records for summary does NOT exist in the table...</h3>
}








