

<input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
<input type="submit" style="        background-color: darkorange;
        border-radius: 9px;
        color: black
" value="⌄" name="btn-downSort" />

<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr>
        <th>
            <div style="width:300px">
                Location
            </div>
        </th>
        <th>
            Date of Incident
        </th>
        <th>
            Incident Type
        </th>
        <th>
            Brief Description of the Incident
        </th>
        <th>
            Brief Description of the Actions Taken
        </th>
        <th>
            Notifications
        </th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DSS.BLL.DTO.BC_LTC_Reportable_Incidents_DTO>)ViewBag.List;
        foreach (var item in list)
        {
            <tr>
                <td>
                    @names[item.CareCommName - 1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateIncident)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IncidentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BriefDescIncid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BriefDescTaken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notifications)
                </td>
                <td>
                    <div style="width:200px;margin-top:10px">
                        @Html.ActionLink("Edit", "Edit_BC_TLC", "Edit", new { id = item.Id }, new { id = "b" })
                        @Html.ActionLink("Details", "Details_BC_TLC", "Details", new { id = item.Id }, new { id = "b" })
                        @Html.ActionLink("Delete", "Delete_BC_TLC", "Delete", new { id = item.Id }, new { id = "b" })
                    </div>
                </td>
            </tr>
        }
    }

</table>
<style>
    #btns {
        width: 300px;
    }

    #b {
        color: darkorange;
        padding: 6px;
        border: 1px solid darkorange;
        border-radius: 9px;
        font-size: medium;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
    }

        #b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }
</style>






