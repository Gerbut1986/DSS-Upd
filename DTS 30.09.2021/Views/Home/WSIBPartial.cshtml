<input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
<input type="submit" style="background-color: darkorange;border-radius: 9px;color: black" value="⌄" name="btn-downSort" />

<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr style="width:200px">
        <th>
            Date Accident
        </th>
        <th>
            <div style="width:300px">
                Location
            </div>
        </th>
        <th>
            Employee Initials/SSLI
        </th>
        <th>
            Cause of Accident
        </th>
        <th>
            Date Modified Duties Commenced
        </th>
        <th>
            Actual Date Employee Returned to Regular Duties
        </th>
        <th>
            Number of Lost Days
        </th>
        <th>
            Number of Modified Days (Not Shadowed)
        </th>
        <th>
            Number of Modified Days (Shadowed)
        </th>
        <th>
            Complete and File Form 7? Reed Group, if Appplicable (Yes/No)
        </th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DSS.BLL.DTO.WSIB_DTO>)ViewBag.List;
        foreach (var item in list)
        {
            <tr style="width:200px">
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Accident)
                </td>
                <td>
                    @names[item.Location - 1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Initials)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accident_Cause)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Duties)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Regular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lost_Days)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified_Days_Not_Shadowed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified_Days_Shadowed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Form_7)
                </td>
                <td>
                    <div style="width:300px;margin-top:10px">
                        @Html.ActionLink("Edit", "Edit_WSIB", "Edit", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Details", "WSIB_Details", "Details", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Delete", "WSIB_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                    </div>
                </td>
            </tr>
        }
    }

</table>
<style>
    .b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        border: 1px solid darkorange;
        border-radius: 9px;
        font-size: medium;
        text-align: center;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }
</style>