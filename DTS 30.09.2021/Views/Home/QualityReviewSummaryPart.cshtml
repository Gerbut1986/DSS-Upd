





<h2 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h2>


@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h2 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h2>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:medium">
                <th scope="col">
                    <label>Standard</label>
                </th>
                <th scope="col">
                    <label>Brief Description of the Findings </label>
                </th>
                <th scope="col">
                    <label>Brief Description of the Recommendations</label>
                </th>
                <th scope="col">
                    <label>Action Plan</label>
                </th>
                <th scope="col">
                    <label>Responsibility</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.QualityReviewSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                        <tr style="font-size:small;color:black">
                            <td scope="row">@ci.Outcomes</td>
                            <td scope="row">@ci.BriefDescFind</td>
                            <td scope="row">@ci.BriefDescRecommend</td>
                            <td scope="row">@ci.Actions</td>
                            <td scope="row">@ci.Responsibility</td>
                        </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h2 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h2>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Stndard</label>
                    </th>
                    <th scope="col">
                        <label>Brief Description of the Findings </label>
                    </th>
                    <th scope="col">
                        <label>Brief Description of the Recommendations</label>
                    </th>
                    <th scope="col">
                        <label>Action Plan</label>
                    </th>
                    <th scope="col">
                        <label>Responsibility</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.QualityReviewSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].CareComName == l)
                        {
                            <tr style="font-size:small;color:black">
                                <td scope="row">@Html.DisplayFor(m => list[ci].Outcomes)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].BriefDescFind)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].BriefDescRecommend)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Actions)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Responsibility)</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or another records for summary does NOT exist in the table...</h3>
}












