@model DSS.BLL.DTO.LicensingInspectionDTO

@{
    ViewBag.Title = "Edit_LiceInspect";
}


<h1 style="text-align:center;font-weight:bold;color:darkorange">Licensing Inspections  - Edit Form</h1>
@Html.ActionLink("Show All Records", "Select_LiceInspect", "Select", "", new { id = "select" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="" style="width:500px;margin:auto">
    <h3 style="text-align:center;color:red">@ViewBag.Empty</h3>
    <br />
    <br />

    <br />
    <br />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div style="color:red">
        * - Required fields
    </div>
    <p></p>
    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Location:<span style="color:red">*</span>
        </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CareComName, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CareComName, "", new { @class = "text-danger" })
            </div>
</div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Date:<span style="color:red">*</span>
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12">Inspection/Complaint # (where applicable):</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.InspectTypeReason, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.InspectTypeReason, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12"> Inspection Type/Reason:</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.InspectTypeReason, ViewBag.TypeReason as SelectList, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.InspectTypeReason, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            No Findings:
        </label>
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.NoFinding, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Contraventions:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Contraventions, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Residential Care Regulation Section:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ResidentCareRegSec, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Residential Care Regulation Subsection:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ResidentCareRegSub, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Brief Description of Contravention:
        </label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.BriefDescription, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Action Plan:
        </label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ActionPlan, new { @class = "form-control" })
            @*Html.EditorFor(model => model.ActionPlan, new { htmlAttributes = new { @class = "form-control" } })*@
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Responsibility:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Responsibility, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Action Date:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ActionDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="width:250px;margin:auto">
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
    </div>
</div>
}


<div>
    <a id="back" href="~/Home/WOR_Tabs">Back to WOR Tabs</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    label {
        font-weight: bold;
    }

    #back {
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        background-color: none;
        color: brown
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #select {
        border: 2px solid darkorange;
        position: absolute;
        border-radius: 22px;
        padding: 7px;
        text-decoration: none;
        color: darkorange;
    }

        #select:hover {
            background-color: darkorange;
            color: white;
        }
</style>



