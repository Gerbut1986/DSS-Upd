@model DSS.BLL.DTO.Community_Risks_DTO

@{
    ViewBag.Title = "Edit_Community";
}

    <h1 style="text-align:center;font-weight:bold;color:darkorange">Community Risks or Legal - Edit Form</h1>


@using (Html.BeginForm())
{
    <div id="">
        <div style="width:500px;margin:auto">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div style="color:red">
                * - Required fields
            </div>
            <p></p>
            @*@Html.HiddenFor(model => model.Id)*@

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Date:<span style="color:red">*</span>
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Location:<span style="color:red">*</span>
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Location, ViewBag.locations[0] as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Type Of Risk:<span style="color:red">*</span>
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Type_Of_Risk, ViewBag.locations[1] as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Type_Of_Risk, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Brief Description:<span style="color:red">*</span>
                </label>
                @*@Html.LabelFor(model => model.Descriptions, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Descriptions, new { @class = "form-control" })
                    @*@Html.EditorFor(model => model.Descriptions, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.Descriptions, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Potential Risk:
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Potential_Risk, ViewBag.locations[2] as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Potential_Risk, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    MOH Visit:
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.MOH_Visit, ViewBag.locations[2] as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MOH_Visit, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Risk Legal Action:
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Risk_Legal_Action, ViewBag.locations[2] as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Risk_Legal_Action, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Hot Alert:
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Hot_Alert, ViewBag.locations[2] as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Hot_Alert, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Status Update:
                </label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Status_Update, new { @class = "form-control" })
                    @*@Html.EditorFor(model => model.Status_Update, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.Status_Update, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">
                    Resolved:
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Resolved, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Resolved, "", new { @class = "text-danger" })
                </div>
            </div>
            <p></p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to All Records", "Select_Community", "Select", "", new { id = "backBtn" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


