@model DSS.BLL.DTO.BC_LTC_Reportable_Incidents_DTO

@{
    ViewBag.Title = "Details_BC_TLC";
}


<div>
    <h1 style="text-align: center;margin-top:15px;   font-size: x-large; color: darkorange; font-weight: bold">Reportable Incidents LTC - Detailed Record</h1>
    <hr />
    <div id="center">
        <dl class="dl-horizontal">
            <dt>
                Location:
            </dt>

            <dd>
                @ViewBag.list
            </dd>

            <dt>
                Date of the Incident:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateIncident)
            </dd>

            <dt>
                Incident Type:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IncidentType)
            </dd>

            <dt>
                Brief Description of the Incident:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BriefDescIncid)
            </dd>

            <dt>
                Brief Description of the Actions Taken:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BriefDescTaken)
            </dd>

            <dt>
                Notifications:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Notifications)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to All Records", "Select_BC_LTC", "Select", "", new { id = "backBtn" })
    </p>
</div>

<style>
    #center {
        width: 420px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 17px;
        border-radius: 22px;
    }

    #backBtn {
        border-radius: 22px;
        border: 2px solid blue;
        padding: 15px;
        background-color: white;
        color: blue;
        position: absolute;
        text-decoration: none;
    }

        #backBtn:hover {
            background-color: blue;
            color: white;
        }
</style>
