@model DSS.BLL.DTO.Emergency_Prep_DTO

@{
    ViewBag.Title = "Emergency_Details";
}

<div>
    <h1 style="text-align: center;font-size: x-large;color: darkorange;font-weight: bold">Emergency Prep - Detailed Record</h1>
    <hr />
    <div id="center">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Location):
            </dt>

            <dd>
                @ViewBag.list
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Code):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Code)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Exercise):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Exercise)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Method):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Method)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Date):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to All Records", "Select_Emergency_Prep", "Select", "", new { id = "backBtn" })
    </p>
</div>
<style>
    #center {
        width: 370px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 17px;
        border-radius: 22px;
    }

    #backBtn {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        color: blue;
    }

        #backBtn:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }
</style>