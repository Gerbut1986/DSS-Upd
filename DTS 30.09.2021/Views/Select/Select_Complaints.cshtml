@model IEnumerable<DSS.BLL.DTO.Complaint_DTO>

@{
    ViewBag.Title = "Select_Complaints";
}

<h1 style="text-align:center;color:darkorange;font-weight:bold">Complaints - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err)
{
    <h3 style="text-align:center;color:green;font-family:'Palatino Linotype';font-weight:bold"> @ViewBag.info_insert </h3>
    <table class="table table-bordered">
        <thead>
            <tr style="font-size:small">
                <th>
                    Date Received
                </th>
                <th>
                    <div style="width:220px">
                        Location
                    </div>
                </th>
                <th>
                    Writen Or Verbal
                </th>
                <th>
                    Receive Directly
                </th>
                <th>
                    From Resident
                </th>
                <th>
                    Resident Name
                </th>
                <th>
                    <div style="width:120px">
                        Department
                    </div>
                </th>
                <th>
                    Home Area
                </th>
                <th>
                    Brief Description
                </th>
                <th>
                    Is Administration
                </th>
                <th>
                    Care Services
                </th>
                <th>
                    Palliative Care
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dietary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Housekeeping)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Laundry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Maintenance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Programs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Admissions)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Other)
                </th>
                <th>
                    Notified Licencing Body
                </th>
                <th>
                    Copy To VP
                </th>
                <th>
                    Response Sent
                </th>
                <th>
                    ActionToken
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Resolved)
                </th>
                <th>
                    Ministry Visit
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="">
                    <td>
                        @Html.DisplayFor(modelItem => item.DateReceived)
                    </td>
                    <td>
                        <div style="width:300px">
                            @ViewBag.list[item.Location - 1]
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WritenOrVerbal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Receive_Directly)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromResident)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResidentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BriefDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdministration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CareServices)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PalliativeCare)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dietary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Housekeeping)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Laundry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Maintenance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Programs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Admissions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Physician)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Other)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MOHLTCNotified)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CopyToVP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseSent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActionToken)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Resolved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinistryVisit)
                    </td>
                    <td id="btns">
                        <div style="width:220px;margin-top:1px">
                            @Html.ActionLink("Edit", "Edit_Complaints", "Edit", new { id = item.Id }, new { @class = "b" })
                            @Html.ActionLink("Details", "Complaints_Details", "Details", new { id = item.Id }, new { @class = "b" })
                            @Html.ActionLink("Delete", "Complaints_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 style="        text-align: center;
        color: white;
        border: 2px solid red;
        border-radius: 9px;
        padding: 12px;
        background: red
">
        @ViewBag.emptyMsg
</h4>
}


