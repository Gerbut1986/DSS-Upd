@model IEnumerable<DSS.BLL.DTO.BC_LTC_Reportable_Incidents_DTO>

@{
    ViewBag.Title = "Select_BC_LTC";
}

<h1 style="text-align:center;font-weight:bold;color:darkorange">Reportable Incidents LTC - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err)
{
    <h3 style="text-align:center;color:green;font-family:'Palatino Linotype'"> @ViewBag.info_insert </h3>
    <div id="tbl">
        <table style="font-size:medium" class="table table-bordered">
            <tr>
                <th>
                    Location
                </th>
                <th>
                    Date of Incident
                </th>
                <th>
                    Incident Type
                </th>
                <th>
                    Brief Description
                </th>
                <th>
                    Brief Description of the Actions Taken
                </th>
                <th>
                    Notifications
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @ViewBag.list[item.CareCommName - 1]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateIncident)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IncidentType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BriefDescIncid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BriefDescTaken)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notifications)
                    </td>
                    <td>
                        <div style="width:190px">
                            @Html.ActionLink("Edit", "Edit_BC_TLC", "Edit", new { id = item.Id }, new { @class = "b" })
                            @Html.ActionLink("Details", "Details_BC_TLC", "Details", new { id = item.Id }, new { @class = "b" })
                            @Html.ActionLink("Delete", "Delete_BC_TLC", "Delete", new { id = item.Id }, new { @class = "b" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>

}


<style>
    .b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }

    #back {
        text-decoration: none;
        border: 2px solid darkorange;
        color: darkorange;
        border-radius: 25px;
        padding: 14px;
    }

        #back:hover {
            background-color: darkorange;
            color: white;
        }

    .btnn {
        text-decoration: none;
    }

    #btn {
        padding: 5px;
        text-align: center;
        border-radius: 12px;
    }

        #btn:hover {
        }
</style>

