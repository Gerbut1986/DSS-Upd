@model IEnumerable<DSS.BLL.DTO.Labour_Relations_DTO>

@{
    ViewBag.Title = "Labour Relations Records - Details";
}

<h1 style="text-align:center;font-weight:bold;color:darkorange">Labour Relations - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err)
{
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                <div style="width:250px">
                    Location
                </div>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Union)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Accruals?
                @*@Html.DisplayNameFor(model => model.Accruals)*@
            </th>
            <th>
                Final Outcome
                @*@Html.DisplayNameFor(model => model.Outcome)*@
            </th>
            <th>
                Lessons Learned
                @*@Html.DisplayNameFor(model => model.Lessons_Learned)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @ViewBag.list[item.Location - 1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Union)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accruals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Outcome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lessons_Learned)
                </td>
                <td>
                    <div style="width:220px;margin-top:1px">
                        @Html.ActionLink("Edit", "Edit_Labour", "Edit", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Details", "Labour_Details", "Details", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Delete", "Labour_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                    </div>
                </td>
            </tr>
        }

    </table>
}
else
{
    <h4 style="        text-align: center;
        color: white;
        border: 2px solid red;
        border-radius: 9px;
        padding: 12px;
        background: red
">@ViewBag.emptyMsg</h4>
}

<style>
    .b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        text-align: center;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }
    #back {
        text-decoration: none;
        border: 2px solid darkorange;
        border-radius: 25px;
        color: darkorange;
        padding: 14px;
    }

        #back:hover {
            background-color: darkorange;
            color: white;
        }
</style>