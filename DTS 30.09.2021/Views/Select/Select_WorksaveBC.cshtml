@model IEnumerable<DSS.BLL.DTO.WorkshopBCInspection_DTO>
@{
    ViewBag.Title = "Select_WorkshopBCInspec";
}


<h1 style="text-align: center; color: darkorange; font-weight: bold"> Workshop BC Inspection - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err)
{
    <table class="table table-bordered">
        <tr>
            <th>
                <div style="width:300px">
                    Location
                </div>
            </th>
            <th>
                Date
            </th>
            <th>
                Inspection Report #
            </th>
            <th>
                Scope of inspection (free text)
            </th>
            <th>
                Tick-box for no Orders
            </th>
            <th>
                Regulations Cited
            </th>
            <th>
                Brief Description of the finding
            </th>

            <th>
                Action Plan
            </th>
            <th>
               Responsibility
            </th>
            <th>
                Action Date
            </th>
            <th>
              	Status of the Order
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @ViewBag.list[item.CareComName - 1]
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InspecteReport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScopeOfInspectiont)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOrders)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Orders)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BriefDescFind)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionPlan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Responsibility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScopeOfInspectiont)
        </td>
        <td>
            <div style="width:200px;margin-top:10px">
                @Html.ActionLink("Edit", "Edit_WorksaveBC", "Edit", new { id = item.Id }, new { id = "b" })
                @Html.ActionLink("Details", "Details_WorksaveBC", "Details", new { id = item.Id }, new { id = "b" })
                @Html.ActionLink("Delete", "Delete_WorksaveBC", "Delete", new { id = item.Id }, new { id = "b" })
            </div>
        </td>
    </tr>
        }

    </table>
}
else
