@model IEnumerable<DSS.BLL.DTO.Immunization_DTO>

@{
    ViewBag.Title = "Select_Immunization";
}


<h1 style="text-align:center;color:darkorange;font-weight:bold"> Immunization - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err)
{
    <table class="table table-bordered">
        <tr>
            <th>
                <div style="width:280px">
                    Location
                </div>
            </th>
            <th>
                Total Number of Residents in the Community
                @*@Html.DisplayNameFor(model => model.Numb_Res_Comm)*@
            </th>
            <th>
                Total Number of Residents Immunized
                @*@Html.DisplayNameFor(model => model.Numb_Res_Immun)*@
            </th>
            <th>
                Total Number of Residents Not Immunized
                @*@Html.DisplayNameFor(model => model.Numb_Res_Not_Immun)*@
            </th>
            <th>
                % of Residents Immunized
                @*@Html.DisplayNameFor(model => model.Per_Res_Immun)*@
            </th>
            <th>
                % of Residents Not Immunized
                @*@Html.DisplayNameFor(model => model.Per_Res_Not_Immun)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @ViewBag.list[item.Location-1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numb_Res_Comm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numb_Res_Immun)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numb_Res_Not_Immun)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Per_Res_Immun)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Per_Res_Not_Immun)
                </td>
                <td>
                    <div style="width:200px;margin-top:2px">
                        @Html.ActionLink("Edit", "Edit_Immun", "Edit", new { id = item.Id }, new { @class="b"})
                        @Html.ActionLink("Details", "Immun_Details", "Details", new { id = item.Id }, new { @class="b"})
                        @Html.ActionLink("Delete", "Immun_Delete", "Delete", new { id = item.Id }, new { @class="b"})
                     </div>
            </td>
        </tr>
    }

    </table>
}
else
{
    <h4 style="        text-align: center;
        color: white;
        border: 2px solid red;
        border-radius: 9px;
        padding: 12px;
        background: red
">@ViewBag.emptyMsg</h4>
}

<style>
    .b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        text-align: center;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }
    #back {
        text-decoration: none;
        border: 2px solid darkorange;
        border-radius: 25px;
        padding: 14px;
        color: darkorange;
    }

        #back:hover {
            background-color: darkorange;
            color: white;
        }

    #btn {
        padding: 1px;
        text-align: center;
    }
</style>