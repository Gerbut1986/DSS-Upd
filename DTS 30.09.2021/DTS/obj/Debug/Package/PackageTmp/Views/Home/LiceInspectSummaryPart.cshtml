


<h3 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h3>


@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h3 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h3>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:medium">
                <th scope="col">
                    <label>Inspection/Complaint #</label>
                </th>
                <th scope="col">
                    <label>Inspection Type/Reason</label>
                </th>
                <th scope="col">
                    <label>No Findings</label>
                </th>
                <th scope="col">
                    <label>Residential Care Regulations </label>
                </th>
                <th scope="col">
                    Community Care and Assisted Living Act
                </th>
                <th scope="col">
                    <label>Resident Care Regulation Section</label>
                </th>
                <th scope="col">
                    <label>Resident Care Regulation Subsection</label>
                </th>
                <th scope="col">
                    <label>Brief Description of Contravention</label>
                </th>
                <th scope="col">
                    <label>Action Plan</label>
                </th>
                <th scope="col">
                    <label>Responsibility</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.LiceInspectSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                        <tr style="font-size:small;color:black">
                            <td scope="row">@ci.InspectComplaint</td>
                            <td scope="row">@ci.InspectTypeReason</td>
                            <td scope="row">@ci.NoFinding</td>
                            <td scope="row">@ci.Contraventions</td>
                            <td scope="row">@ci.CommCareLivAct</td>
                            <td scope="row">@ci.ResidentCareRegSec</td>
                            <td scope="row">@ci.ResidentCareRegSub</td>
                            <td scope="row">@ci.BriefDescription</td>
                            <td scope="row">@ci.ActionPlan</td>
                            <td scope="row">@ci.Responsibility</td>
                        </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h3 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h3>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Inspection/Complaint #</label>
                    </th>
                    <th scope="col">
                        <label>Inspection Type/Reason</label>
                    </th>
                    <th scope="col">
                        <label>No Findings</label>
                    </th>
                    <th scope="col">
                        <label>Residential Care Regulations </label>
                    </th>
                    <th scope="col">
                        Community Care and Assisted Living Act
                    </th>
                    <th scope="col">
                        <label>Resident Care Regulation Section</label>
                    </th>
                    <th scope="col">
                        <label>Resident Care Regulation Subsection</label>
                    </th>
                    <th scope="col">
                        <label>Brief Description of Contravention</label>
                    </th>
                    <th scope="col">
                        <label>Action Plan</label>
                    </th>
                    <th scope="col">
                        <label>Responsibility</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.LiceInspectSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].CareComName == l)
                        {
                                <tr style="font-size:small;color:black">
                                    <td scope="row">@Html.DisplayFor(m => list[ci].InspectComplaint)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].InspectTypeReason)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].NoFinding)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Contraventions)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].CommCareLivAct)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].ResidentCareRegSec)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].ResidentCareRegSub)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].BriefDescription)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].ActionPlan)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Responsibility)</td>
                                </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Summary records for this location do NOT exist in the table...</h3>
}









