
<input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
<input type="submit" style="        background-color: darkorange;
        border-radius: 9px;
        color: black
" value="⌄" name="btn-downSort" />

<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr >
        <th>
                Date of News
        </th>
        <th>
            <div style="width:200px">
                Location
            </div>
        </th>
        <th>
            Category (Good News/Compliment)
        </th>
        <th>
            Department
        </th>
        <th>
            Source of Compliment
        </th>
        <th>
            Received From
        </th>
        <th>
            <div style="width:330px">
                Description Compliment/Recognition
                </div>
        </th>
        <th>
            Respect
        </th>
        <th>
            Passion
        </th>
        <th>
            Teamwork
        </th>
        <th>
            Responsibility
        </th>
        <th>
            Growth
        </th>
        <th>
            Compliment/Picture Communicated to SSO Marketing
        </th>
        <th>
            Spot Awards
        </th>
        <th>
            Spot Awards Details
        </th>
        <th>
            Name of External Award that was Applied For
        </th>
        <th>
            Awards Received (Yes/No)
        </th>
        <th>
            <div style="width:330px">
                Description of Community Inititives as per KPI
            </div>
        </th>
        <th></th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DSS.BLL.DTO.Good_News_DTO>)ViewBag.List;
        foreach (var item in list)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateNews)
            </td>
            <td>
                @names[item.Location - 1]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceCompliment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description_Complim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Respect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teamwork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Growth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compliment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spot_Awards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Awards_Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameAwards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Awards_Received)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Community_Inititives)
            </td>
            <td>
                <div id="btns">
                    @Html.ActionLink("Edit", "Edit_GoodNews", "Edit", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Details", "GoodNews_Details", "Details", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Delete", "GoodNews_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                </div>
            </td>
        </tr>
        }
    }

</table>
<style>
    #btns {
        width: 300px;
    }

    .b {
        color: darkorange;
        padding: 6px;
        border: 1px solid darkorange;
        border-radius: 9px;
        font-size: medium;
        text-decoration: none;
        font-weight: bold;
        text-align: center;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
          
            border-radius: 10px;
        }
</style>