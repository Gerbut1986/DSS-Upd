@model DSS.BLL.DTO.WorkshopBCInspection_DTO
@{
    ViewBag.Title = "LicensingInspections";
}

<h1 style="color:darkorange;font-weight:bold;text-align:center">Worksafe BC Inspections - Entry Form</h1>

@using (Html.BeginForm())
{
    <div id="">
        @Html.AntiForgeryToken()
        @Html.ActionLink("Show All Records", "Select_LiceInspect", "Select", "", new { id = "select" })
        <br /> <br />
               <div class="" style="width:500px;margin:auto">
                   <hr />
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                   <div style="color:red">
                       * - Required fields
                   </div>
                   <p></p>
                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Date:<span style="color:red">*</span>
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Location:<span style="color:red">*</span>
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.CareComName, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                           @Html.ValidationMessageFor(model => model.CareComName, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Inspection Report #:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.InspecteReport, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Scope of Inspection:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.ScopeOfInspectiont, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           No Orders:
                       </label>
                       <div class="col-md-10">
                           @Html.CheckBoxFor(model => model.NoOrders, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <br /><label style="font-size:large;font-weight:bold">Orders:</label><br />
                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Regulations Cited:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Orders, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Brief Description of the Findings of the Order:
                       </label>
                       <div class="col-md-10">
                           @Html.TextAreaFor(model => model.BriefDescFind, new { @class = "form-control" })
                       </div>
                   </div>

                   <br /><br />
                   <div style="padding:16px;border:1px solid;border-radius:12px;width:450px">

                       <div class="form-group">
                           <label class="control-label col-md-12" style="font-weight:bold"> Action Plan:</label>
                           <div class="col-md-10">
                               @Html.TextAreaFor(model => model.ActionPlan, new { @class = "form-control" })
                               @Html.ValidationMessageFor(model => model.ActionPlan, "", new { @class = "text-danger" })
                           </div>
                       </div>

                       <div class="form-group">
                           <label class="control-label col-md-12" style="font-weight:bold"> Responsibility:</label>
                           <div class="col-md-10">
                               @Html.EditorFor(model => model.Responsibility, new { htmlAttributes = new { @class = "form-control" } })
                               @Html.ValidationMessageFor(model => model.Responsibility, "", new { @class = "text-danger" })
                           </div>
                       </div>

                       <div class="form-group">
                           <label class="control-label col-md-12" style="font-weight:bold"> Action Date:</label>
                           <div class="col-md-10">
                               @Html.EditorFor(model => model.ActionDate, new { htmlAttributes = new { @class = "form-control" } })
                           </div>
                       </div>

                       <div class="form-group">
                           <label class="control-label col-md-12" style="font-weight:bold"> Status of the Order:</label>
                           <div class="col-md-10">
                               @Html.DropDownListFor(model => model.StatusOfTheOrder, ViewBag.ScopeInspect as SelectList, "", new { @class = "form-control" })
                               @Html.ValidationMessageFor(model => model.ScopeOfInspectiont, "", new { @class = "text-danger" })
                           </div>
                       </div>
                   </div>

                   <p></p>
                   <div class="form-group">
                       <div class="col-md-offset-2 col-md-10" style="width:255px;margin:auto">
                           <input type="submit" value="Add a New Record" class="btn btn-success" />
                       </div>
                   </div>
               </div>
    </div>
}

<div>
    <a id="back" href="~/Home/WOR_Tabs">Back to WOR Tabs</a>
</div>
