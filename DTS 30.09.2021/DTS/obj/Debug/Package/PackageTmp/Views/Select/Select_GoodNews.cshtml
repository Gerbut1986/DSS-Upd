@model IEnumerable<DSS.BLL.DTO.Good_News_DTO>

@{
    ViewBag.Title = "Select_GoodNews";
}
<h1 style="text-align:center;font-weight:bold;color:darkorange">Good News - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err == false)
{
    <h4 style="text-align: center;color: white;border: 2px solid red; border-radius: 9px; padding: 12px; background: red">@ViewBag.emptyMsg</h4>
}
else
{
    using (Html.BeginForm("Select_GoodNews", "Select", FormMethod.Post))
    {
        <h3 style="text-align:center;color:green;font-family:'Palatino Linotype'"> @ViewBag.info_insert </h3>

        <input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
        <input type="submit" style="background-color: darkorange;border-radius: 9px;color:black" value="⌄" name="btn-downSort" />
    }
    <table class="table table-bordered">
        <tr>
            <th>
                Date of News
            </th>
            <th>
                <div style="width:200px">
                    Location
                </div>
            </th>
            <th>
                Category (Good News/Compliment)
            </th>
            <th>
                Department
            </th>
            <th>
                Source of Compliment
            </th>
            <th>
                Received From
            </th>
            <th>
                <div style="width:330px">
                    Description Compliment/Recognition
                </div>
            </th>
            <th>
                Respect
            </th>
            <th>
                Passion
            </th>
            <th>
                Teamwork
            </th>
            <th>
                Responsibility
            </th>
            <th>
                Growth
            </th>
            <th>
                Compliment/Picture Communicated to SSO Marketing
            </th>
            <th>
                Spot Awards
            </th>
            <th>
                Spot Awards Details
            </th>
            <th>
                Name of External Award that was Applied For
            </th>
            <th>
                Awards Received (Yes/No)
            </th>
            <th>
                <div style="width:330px">
                    Description of Community Inititives as per KPI
                </div>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateNews)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @ViewBag.list[item.Location - 1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SourceCompliment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceivedFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description_Complim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Respect)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teamwork)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsibility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Growth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Compliment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Spot_Awards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Awards_Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameAwards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Awards_Received)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Community_Inititives)
                </td>
                <td id="btns">
                    <div style="width:190px">
                        @Html.ActionLink("Edit", "Edit_GoodNews", "Edit", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Details", "GoodNews_Details", "Details", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Delete", "GoodNews_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                    </div>
                </td>
            </tr>
        }
    </table>
}
<style>
    .b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        text-decoration: none;
        border: 1px solid darkorange;
        border-radius: 10px;
        text-align: center;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            border-radius: 10px;
        }

    #back {
        text-decoration: none;
        border: 2px solid darkorange;
        color: darkorange;
        border-radius: 25px;
        padding: 14px;
    }

        #back:hover {
            background-color: darkorange;
            color: white;
        }

    .btnn {
        text-decoration: none;
    }

    #btn {
        padding: 5px;
        text-align: center;
        border-radius: 12px;
    }

        #btn:hover {
        }
</style>
