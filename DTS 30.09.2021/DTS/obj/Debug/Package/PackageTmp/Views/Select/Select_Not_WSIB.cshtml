@model IEnumerable<DSS.BLL.DTO.Not_WSIBs_DTO>

@{
    ViewBag.Title = "Select Not_WSIB";
}


<h1 style="text-align: center;color: darkorange;font-weight: bold">Internal - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err)
{
    using (Html.BeginForm())
    {
        <h3 style="text-align:center;color:green;font-family:'Palatino Linotype'"> @ViewBag.info_insert </h3>

        <input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
        <input type="submit" style="background-color: darkorange;border-radius: 9px;color:black" value="⌄" name="btn-downSort" />
    }
    <table class="table table-bordered">
        <tr>
            <th>
                <div style="width:250px">
                    Location
                </div>
            </th>
            <th>
                <div style="width:0px">
                    Date of Incident
                </div>
            </th>

            <th>
                Employee Initials/SSLI
            </th>
            <th>
                Position
            </th>
            <th>
                Time of Incident
            </th>
            <th>
                Shift
            </th>
            <th>
                Home Area/Location
            </th>
            <th>
                Injury Related To
            </th>
            <th>
                Type of Injury
            </th>
            <th>
                <div style="width:330px">
                    Details of Incident
                </div>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @ViewBag.list[item.Location - 1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_of_Incident)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Initials)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time_of_Incident)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shift)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Home_Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Injury_Related)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type_of_Injury)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details_of_Incident)
                </td>
                <td>
                    <div style="width:200px;margin-top:15px">
                        @Html.ActionLink("Edit", "Edit_Not_WSIB", "Edit", new { id = item.Id }, new { id = "b" })
                        @Html.ActionLink("Details", "Not_WSIB_Details", "Details", new { id = item.Id }, new { id = "b" })
                        @Html.ActionLink("Delete", "Not_WSIB_Delete", "Delete", new { id = item.Id }, new { id = "b" })
                    </div>
                </td>
            </tr>
        }

    </table>
}
else
{
    <h4 style="text-align: center;
        color: white;
        border: 2px solid red;
        border-radius: 9px;
        padding: 12px;
        background: red
">
        @ViewBag.emptyMsg
</h4>
}

<style>
    #b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        border: 1px solid darkorange;
        border-radius: 10px;
        text-align: center;
        text-decoration: none;
    }

        #b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            border-radius: 10px;
        }

    #back {
        text-decoration: none;
        border: 2px solid darkorange;
        color: darkorange;
        border-radius: 25px;
        padding: 14px;
    }

        #back:hover {
            background-color: darkorange;
            color: white;
        }

    .btnn {
        text-decoration: none;
    }

    #btn {
        padding: 5px;
        text-align: center;
        border-radius: 12px;
    }

        #btn:hover {
            background-color: blue;
        }
</style>