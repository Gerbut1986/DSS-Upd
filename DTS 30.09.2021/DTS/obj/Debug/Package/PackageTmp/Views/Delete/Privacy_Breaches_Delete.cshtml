@model DSS.BLL.DTO.Privacy_Breaches_DTO

@{
    ViewBag.Title = "Privacy_Breaches_Delete";
}

<h2 style="text-align: center; color: darkorange;font-weight: bold">Privacy Breaches - Delete Form</h2>

<h1 style="text-align:center;color:white;background-color:black">Are you sure you want to delete this record?</h1>
<div id="center">
    @*<h1 style="text-align:center;color:darkorange">Privacy Breaches <br /> ID - @Html.DisplayFor(id => id.Id)</h1>*@
 
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Location):
        </dt>

        <dd>
            @ViewBag.list
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Date Breach Occurred:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_Breach_Occurred)
        </dd>

        <dt>
            Date Breach Reported:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_Breach_Reported)
        </dd>

        <dt>
            Breach Reported By:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_Breach_Reported_By)
        </dd>

        <dt>
            Type of Breach:
