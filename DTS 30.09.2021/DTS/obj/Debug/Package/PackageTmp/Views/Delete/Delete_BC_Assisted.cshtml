@model DSS.BLL.DTO.BC_Assisted_Living_Reportable_Incidents_DTO

@{
    ViewBag.Title = "BC Assisted Living Reportable Incidents";
}



<h2 style=" text-align: center; color: darkorange;font-weight: bold">Reportable Incidents Assisted Living - Delete Form</h2>

<h1 style="text-align: center; color: white;background-color: black; ">Are you sure you want to delete this record?</h1>
<div id="center">
    @*<h1 style="text-align:center;color:darkorange">Immunization <br /> ID - @Html.DisplayFor(id => id.Id)</h1>*@

    <dl class="dl-horizontal">
        <dt>
          <label>Location:</label>
        </dt>

        <dd>
            @ViewBag.list
        </dd>

        <dt>
            Date of Incident:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateIncident)
        </dd>

        <dt>
            Incident Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IncidentType)
        </dd>

        <dt>
          	Brief Description of the Incident:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BriefDescrincident)
        </dd>

        <dt>
            Brief Description of the Actions Taken:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BriefDescrTaken)
        </dd>

        <dt>
            Notifications:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notifications)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="cent" class="form-actions no-color">
            <input id="centBtn" type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>

@Html.ActionLink("Back to All Records", "Select_BC_LTC_Assisted", "Select", "", new { id = "back" })


<style>
    #cent, #centBtn {
        width: 200px;
        margin: auto;
    }

    #btn {
        font-size: large;
    }

    #back {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        color: blue;
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #center {
        width: 370px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 17px;
        border-radius: 22px;
    }
</style>