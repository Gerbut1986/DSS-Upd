@model DSS.BLL.DTO.OtherDTO

@{
    ViewBag.Title = "Other_Delete";
}

<h2 style=" text-align: center; color: darkorange;font-weight: bold">Others - Delete Form</h2>

<h1 style="text-align: center; color: white;background-color: black; ">Are you sure you want to delete this record?</h1>
<div id="center">
    @*<h1 style="text-align:center;color:darkorange">Immunization <br /> ID - @Html.DisplayFor(id => id.Id)</h1>*@

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date):
        </dt>

        <dd>
            @ViewBag.list
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            Inspected_By
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Inspected_By)
        </dd>

        <dt>
            Inspection_Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Inspection_Number)
        </dd>

        <dt>
            Number_of_Violations:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Number_of_Violations)
        </dd>

        <dt>
            Notes_Comments:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes_Comments)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="cent" class="form-actions no-color">
            <input id="centBtn" type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>

@Html.ActionLink("Back to All Records", "Select_Others", "Select", "", new { id = "back" })


<style>
    #cent, #centBtn {
        width: 200px;
        margin: auto;
    }

    #btn {
        font-size: large;
    }

    #back {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        color: blue;
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #center {
        width: 370px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 17px;
        border-radius: 22px;
    }
</style>