@model DTS.Models.ApplicationUser

@{
    ViewBag.Title = "Edit_User";
}

<h2 style="color:darkorange;font-family:'Palatino Linotype';text-align:center">** Edit User **</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4 style="font-family:'Palatino Linotype';text-align:center">
        Id:&nbsp;
        @Html.DisplayFor(model => model.Id, null, new { style = "color:red;font-famaly:Palatino Linotype;font-weight:bold" })
    </h4>
    <div style="width:300px;margin:auto">
        <div style="width:400px;margin:auto">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    Last Name
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    First Name
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    Date Register
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateRegister, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateRegister, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    Role
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Role, ViewBag.TypeRole as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    Region
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Region, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Region, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    Care Community
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Care_Community, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Care_Community, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                   Position
                </label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Position, ViewBag.positions as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    Email
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>                      

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    Phone Number
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-family:'Palatino Linotype';font-weight:bold" class="">
                    User Name
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div style="width:180px;margin:auto;" class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back All Records", "GetAllUsers", "admin", "", new { id = "backBtn" })
</div>


<style>
    #backBtn {
        border: 2px blue solid;
        border-radius: 22px;
        background-color: white;
        color: blue;
        padding: 15px;
        text-decoration: none;
    }

        #backBtn:hover {
            background-color: blue;
            color: white;
        }
</style>