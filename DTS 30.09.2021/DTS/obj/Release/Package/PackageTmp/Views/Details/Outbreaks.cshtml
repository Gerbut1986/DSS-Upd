@model DSS.BLL.DTO.Outbreaks_DTO

@{
    ViewBag.Title = "Outbreaks";
}

<div>
    <h1 style="text-align: center;font-size: x-large;color: darkorange; font-weight: bold">Outbreaks - Detailed Record</h1>
    <hr />
    <div id="center">
        <dl class="dl-horizontal">
            <dt>
                Date Declared:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date_Declared)
            </dd>

            <dt>
                Date Concluded:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date_Concluded)
            </dd>

            <dt>
                Type of Outbreak:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Type_of_Outbreak)
            </dd>

            <dt>
                Total Days Closed:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Total_Days_Closed)
            </dd>

            <dt>
                Total Residents Affected:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Total_Residents_Affected)
            </dd>

            <dt>
                Total Staff Affected:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Total_Staff_Affected)
            </dd>

            <dt>
                Strain Identified:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Strain_Identified)
            </dd>

            <dt>
                Deaths Due to this Outbreak:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Deaths_Due)
            </dd>

            <dt>
                CI Report Submitted:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CI_Report_Submitted)
            </dd>

            <dt>
                Notify MOL if Staff has Become Ill due to this Outbreak:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Notify_MOL)
            </dd>

            <dt>
                Credit for Lost Days - Total # of Days of Credit:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Credit_for_Lost_Days)
            </dd>

            <dt>
                Tracking Sheet Completed:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tracking_Sheet_Completed)
            </dd>

            <dt>
                Documents Submitted to Finance:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Docs_Submitted_Finance)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to All Records", "Outbreaks", "Select", "", new { id = "backBtn" })
    </p>
</div>

<style>
    #center {
        width: 450px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 33px;
        border-radius: 22px;
    }

    #backBtn {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        color: blue;
    }

        #backBtn:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }
</style>