@model IEnumerable<DSS.BLL.DTO.WSIB_DTO>

@{
    ViewBag.Title = "Select_WSIB";
}


<h1 style="text-align: center; color: darkorange; font-weight: bold"> WSIB - All Records</h1>

@Html.ActionLink("<-- Back", "WOR_Tabs", "Home", "", new { id = "back" })
<br />
<br />
<br />
@if (ViewBag.err)
{
    <table class="table table-bordered">
        <tr>
            <th>
                Date of Accident
            </th>
            <th>
                <div style="width:300px">
                    Location
                </div>
            </th>
            <th>
                Employee Initials/SSLI
            </th>
            <th>
                Cause of Accident
            </th>
            <th>
                Date Modified Duties Commenced
            </th>
            <th>
                Actual Date Employee Returned to Regular Duties
            </th>
            <th>
                Number of Lost Days
            </th>
            <th>
                Number of Modified Days (Not Shadowed)
            </th>
            <th>
                Number of Modified Days (Shadowed)
            </th>
            <th>
                Complete and File Form 7? Reed Group, if Applicable (Yes/No)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Accident)
                </td>
                <td>
                    @ViewBag.list[item.Location-1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Initials)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accident_Cause)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Duties)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Regular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lost_Days)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified_Days_Not_Shadowed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified_Days_Shadowed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Form_7)
                </td>
                <td>      
                    <div style="width:200px;margin-top:10px">
                        @Html.ActionLink("Edit", "Edit_WSIB", "Edit", new { id = item.Id }, new { id = "b" })
                        @Html.ActionLink("Details", "WSIB_Details", "Details", new { id = item.Id }, new { id = "b" })
                        @Html.ActionLink("Delete", "WSIB_Delete", "Delete", new { id = item.Id }, new { id = "b" })
                    </div>
                </td>
            </tr>
        }

    </table>
}
else
{
    <h4 style="        text-align: center;
        color: white;
        border: 2px solid red;
        border-radius: 9px;
        padding: 12px;
        background: red
">@ViewBag.emptyMsg</h4>
}

