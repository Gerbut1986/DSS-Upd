@model DSS.BLL.DTO.QualityReview_DTO

@{
    ViewBag.Title = "Delete Quality Review";
}

<h2 style="text-align: center; color: darkorange;font-weight: bold"> Quality Reviews/QACR - Delete Form</h2>

<h1 style="text-align:center;color:white;background-color:black">Are you sure you want to delete this record?</h1>
<div id="center">

    <dl class="dl-horizontal">
        <dt>
            Location:
        </dt>

        <dd>
            @ViewBag.list
        </dd>

        <dt>
            Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

  
        <dt>
            <span style="font-size:larger">
                Outcomes:
            </span>
        </dt>

        <dt>
            Standard:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Outcomes)
        </dd>

        <dt>
            Brief Description of the Findings:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BriefDescFind)
        </dd>

        <dt>
            Brief Description of the Recommendations:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BriefDescRecommend)
        </dd>

        <dt>
            Action Plan:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Actions)
        </dd>

        <dt>
            Responsibility:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Responsibility)
        </dd>

        <dt>
            Action Date:
        </dt>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="cent" class="form-actions no-color">
            <input id="centBtn" type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>

@Html.ActionLink("Back to All Records", "Select_QualityReview", "Select", "", new { id = "back" })


<style>
    #cent, #centBtn {
        width: 200px;
        margin: auto;
    }

    #btn {
        font-size: large;
    }

    #back {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        color: blue;
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #center {
        width: 370px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 17px;
        border-radius: 22px;
    }
</style>

