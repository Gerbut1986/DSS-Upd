@model DSS.BLL.DTO.Privacy_Complaints_DTO

@{
    ViewBag.Title = "Privacy_Complaints_Delete";
}

<h2 style="text-align: center;color: darkorange;font-weight: bold">Privacy Complaints - Delete Form</h2>

<h1 style="text-align:center;color:white;background-color:black">Are you sure you want to delete this record?</h1>
<div id="center">

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Location):
        </dt>

        <dd>
            @ViewBag.list
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Date Complaint Received:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_Complain_Received)
        </dd>

        <dt>
            Complaint Filed By:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Complain_Filed_By)
        </dd>

        <dt>
            Type of Complaint:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type_of_Complaint)
        </dd>

        <dt>
            Is Complaint Resolved:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Is_Complaint_Resolved)
        </dd>

        <dt>
            Description Outcome:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description_Outcome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="cent" class="form-actions no-color">
            <input id="centBtn" type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
@Html.ActionLink("Back to All Records", "Privacy_Complaints", "Select", "", new { id = "back" })
<style>
    #cent, #centBtn {
        width: 200px;
        margin: auto;
    }

    #btn {
        font-size: large;
    }

    #back {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        color: blue;
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #center {
        width: 370px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 17px;
        border-radius: 22px;
    }
</style>
