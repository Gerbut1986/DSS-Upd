<input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
<input type="submit" style="        background-color: darkorange;
        border-radius: 9px;
        color: black
" value="⌄" name="btn-downSort" />

<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr>
        <th>
            <div style="width:180px">
                Date Complaint Received
            </div>
        </th>
        <th>
            <div style="width:220px">
                Location
            </div>
        </th>
        <th>
            Status
        </th>
        <th>
            Complaint Filed By
        </th>
        <th>
            Type of Complaint
        </th>
        <th>
            Is Complaint Resolved (Y/N)
        </th>
        <th>
            Description/Outcome
        </th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DSS.BLL.DTO.Privacy_Complaints_DTO>)ViewBag.List;
        foreach (var item in list)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Complain_Received)
            </td>
            <td>
                @names[item.Location - 1]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complain_Filed_By)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type_of_Complaint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Complaint_Resolved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description_Outcome)
            </td>
            <td id="btns">
                <div style="width:200px">
                    @Html.ActionLink("Edit", "Edit_Privacy_Complaints", "Edit", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Details", "Privacy_Complaints_Details", "Details", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Delete", "Privacy_Complaints_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                </div>
            </td>
        </tr>
        }
    }

</table>
<style>
    #btns {
        width: 300px;
    }

    .b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        text-align: center;
        border: 1px solid darkorange;
        border-radius: 9px;
        font-size: medium;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }
</style>






