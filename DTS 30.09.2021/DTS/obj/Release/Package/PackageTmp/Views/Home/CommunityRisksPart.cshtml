


<h2 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h2>



@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h2 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h2>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:medium">
                <th scope="col">
                    <label>Type Of Risk</label>
                </th>
                <th scope="col">
                    <label>Descriptions</label>
                </th>
                <th scope="col">
                    <label>Potential Risk</label>
                </th>
                <th scope="col">
                    <label>MOH Visit</label>
                </th>
                <th scope="col">
                    <label>Risk Legal Action</label>
                </th>
                <th scope="col">
                    <label>Hot Alert</label>
                </th>
                <th scope="col">
                    <label>Status Update</label>
                </th>
                <th scope="col">
                    <label>Resolved</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.ComRiskSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                    <tr style="font-size:small;color:black">
                        <td scope="row">@ci.Type_Of_Risk</td>
                        <td scope="row">@ci.Descriptions</td>
                        <td scope="row">@ci.Potential_Risk</td>
                        <td scope="row">@ci.MOH_Visit</td>
                        <td scope="row">@ci.Risk_Legal_Action</td>
                        <td scope="row">@ci.Hot_Alert</td>
                        <td scope="row">@ci.Status_Update</td>
                        <td scope="row">@ci.Resolved</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h2 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h2>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Type Of Risk</label>
                    </th>
                    <th scope="col">
                        <label>Descriptions</label>
                    </th>
                    <th scope="col">
                        <label>Potential Risk</label>
                    </th>
                    <th scope="col">
                        <label>MOH Visit</label>
                    </th>
                    <th scope="col">
                        <label>Risk Legal Action</label>
                    </th>
                    <th scope="col">
                        <label>Hot Alert</label>
                    </th>
                    <th scope="col">
                        <label>Status Update</label>
                    </th>
                    <th scope="col">
                        <label>Resolved</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.ComRiskSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].LocationName == l)
                        {
                            <tr style="font-size:small;color:black">
                                <td scope="row">@Html.DisplayFor(m => list[ci].Type_Of_Risk)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Descriptions)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Potential_Risk)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].MOH_Visit)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Risk_Legal_Action)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Hot_Alert)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Status_Update)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Resolved)</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or another records for summary does NOT exist in the table...</h3>
}







