
<h2 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h2>


@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h2 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h2>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:medium">
                <th scope="col">
                    <label>Employee Initials</label>
                </th>
                <th scope="col">
                    <label>Accident Cause</label>
                </th>
                <th scope="col">
                    <label>Lost Days</label>
                </th>
                <th scope="col">
                    <label>Modified Days Not Shadowed</label>
                </th>
                <th scope="col">
                    <label>Modified Days Shadowed</label>
                </th>
                <th scope="col">
                    <label>Form 7</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.WSIBSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                    <tr style="font-size:small;color:black">
                        <td scope="row">@ci.Employee_Initials</td>
                        <td scope="row">@ci.Accident_Cause</td>
                        <td scope="row">@ci.Lost_Days</td>
                        <td scope="row">@ci.Modified_Days_Not_Shadowed</td>
                        <td scope="row">@ci.Modified_Days_Shadowed</td>
                        <td scope="row">@ci.Form_7</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h2 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h2>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Employee Initials</label>
                    </th>
                    <th scope="col">
                        <label>Accident Cause</label>
                    </th>
                    <th scope="col">
                        <label>Lost Days</label>
                    </th>
                    <th scope="col">
                        <label>Modified Days Not Shadowed</label>
                    </th>
                    <th scope="col">
                        <label>Modified Days Shadowed</label>
                    </th>
                    <th scope="col">
                        <label>Form 7</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.WSIBSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].LocationName == l)
                        {
                            <tr style="font-size:small;color:black">
                                <td scope="row">@Html.DisplayFor(m => list[ci].Employee_Initials)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Accident_Cause)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Lost_Days)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Modified_Days_Not_Shadowed)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Modified_Days_Shadowed)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Form_7)</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or another records for summary does NOT exist in the table...</h3>
}








