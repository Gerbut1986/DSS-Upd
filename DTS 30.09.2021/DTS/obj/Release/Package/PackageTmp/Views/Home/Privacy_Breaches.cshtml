@model DSS.BLL.DTO.Privacy_Breaches_DTO

@{
    ViewBag.Title = "Privacy_Breaches";
}
<h1 style="color:darkorange;font-weight:bold;text-align:center">Privacy Breaches - Entry Form</h1>
<h3 style="text-align:center;color:red">@ViewBag.Empty</h3>
<br />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ActionLink("Show All Records", "Privacy_Breaches", "Select", "", new { id = "select" })
    <br />
    <br />
    <div class="" style="width:500px;margin:auto">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="color:red">
            * - Required fields
        </div>
        <p></p>
        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Location:<span style="color:red">*</span>
            </label>
            @*@Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Location, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Status:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Date Breach Occurred:<span style="color:red">*</span>
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Breach_Occurred, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date_Breach_Occurred, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Date Breach Reported:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Breach_Reported, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Breach Reported By:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Breach_Reported_By, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Type of Breach:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type_of_Breach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type_of_Breach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Types of PHI involved (i.e. healthcard number):
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type_of_PHI_Involved, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type_of_PHI_Involved, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Number of Individuals Affected:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Number_of_Individuals_Affected, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Description/Outcome:
            </label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description_Outcome, new { @class = "form-control" })
                @*@Html.EditorFor(model => model.Description_Outcome, new { htmlAttributes = new { @class = "form-control" } })*@
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-12"  style="font-weight:bold">
                Risk Level:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Risk_Level, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Risk_Level, "", new { @class = "text-danger" })
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add a New Record" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to WOR Tabs", "WOR_Tabs", "Home", new { id = "back" })
</div>
