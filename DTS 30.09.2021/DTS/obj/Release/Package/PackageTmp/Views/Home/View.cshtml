
@model DSS.BLL.DTO.InspectionInfo_DTO


<div style="width:2000px;padding:32px">
    <div style="height:110px">
        <div style="" class="col-sm-2">
            <label>Non-Compliance</label>
            @Html.DropDownListFor(model => model.NonCompliance, ViewBag.List[2] as SelectList, new { @class = "form-control" })
        </div>
        <div class="col-sm-1">
            <label>LTCHA/Reg</label>
            @Html.DropDownListFor(model => model.LTCHAReg, ViewBag._1st as SelectList, new { @class = "form-control", id = "state" })
        </div>
        <div class="col-sm-2">
            <label>Section</label>
            @Html.DropDownListFor(model => model.Section, ViewBag._2nd as SelectList, new { @class = "form-control", id = "section" })
        </div>
        <div class="col-sm-2">
            <label>Subsection</label>
            @Html.DropDownListFor(model => model.Subsection, ViewBag._3rd as SelectList, new { @class = "form-control", id = "subsection" })
        </div>
        <div class="col-sm-2">
            <label style="margin-left:4px;width:180px">Other option as needed</label>
            @Html.DropDownListFor(model => model.OtherOptionAsNeeded, ViewBag._4th as SelectList, new { @class = "form-control col-sm-1", id = "other" })
        </div>
        <div style="margin-left: 10px" class="col-sm-1">
            <label>Director Referral</label><br />
            @Html.CheckBoxFor(model => model.DirectorReferral, new { style = "font-size:large;margin:0 0 0 50px" })
        </div>
        <div style="width:300px" class="col-sm-1">
            <label>Cleared by Inspection No.</label>
            @Html.TextBoxFor(model => model.ClearedByInspectionNo, new { @class = "form-control", placeholder = "Cleared by Inspection No." })
        </div>
    </div>

