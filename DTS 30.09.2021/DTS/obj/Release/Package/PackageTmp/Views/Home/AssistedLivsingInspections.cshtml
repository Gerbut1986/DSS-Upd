@model DSS.BLL.DTO.AssistedLivingInspectionDTO
@{
    ViewBag.Title = "Assisted Living Inspections";
}

<h1 style="color:darkorange;font-weight:bold;text-align:center">Assisted Living Inspections - Entry Form</h1>

@using (Html.BeginForm())
{
    <div id="">
        @Html.AntiForgeryToken()
        @Html.ActionLink("Show All Records", "Select_AssistLivInspect", "Select", "", new { id = "select" })
        <br /> <br />
               <div class="" style="width:500px;margin:auto">
                   <hr />
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                   <div style="color:red">
                       * - Required fields
                   </div>
                   <p></p>
                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Date*:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Location:<span style="color:red">*</span>
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.CareComName, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                           @Html.ValidationMessageFor(model => model.CareComName, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Inspection/Complaint # (where applicable)
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.InspectComplaint, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Inspection Type/Reason:
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.InspectTypeReason, ViewBag.TypeReason as SelectList, "", new { @class = "form-control" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           No Findings:
                       </label>
                       <div class="col-md-10">
                           @Html.CheckBoxFor(model => model.NoFinding, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Assisted Living Regulation:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.AssistLivReg, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Community Care and Assisted Living Act:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.AssistLivAct, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Section of the Act or Regulation:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.ActOrReg, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Subsection of the Act or Regulation:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.SubActOrReg, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Brief Description of the finding/observation:
                       </label>
                       <div class="col-md-10">
                           @Html.TextAreaFor(model => model.BriefDescOfFinding, new { @class = "form-control" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Action Plan:
                       </label>
                       <div class="col-md-10">
                           @Html.TextAreaFor(model => model.ActionPlan, new { @class = "form-control" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Action Plan:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.ActionPlan, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Responsibility:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Responsibility, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class="control-label col-md-12" style="font-weight:bold">
                           Action Date
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.ActionDate, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>
                   <br />

                   <p></p>
                   <div class="form-group">
                       <div class="col-md-offset-2 col-md-10">
                           <input type="submit" value="Add a New Record" class="btn btn-success" />
                       </div>
                   </div>
               </div>
    </div>
}

<div>
    <a id="back" href="~/Home/WOR_Tabs">Back to WOR Tabs</a>
</div>
