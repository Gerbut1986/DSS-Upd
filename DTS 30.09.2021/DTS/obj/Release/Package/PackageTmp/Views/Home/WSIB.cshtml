@model DSS.BLL.DTO.WSIB_DTO

@{
    ViewBag.Title = "WSIB";
}

<h1 style="color:darkorange;font-weight:bold;text-align:center">WSIB - Entry Form</h1>

@using (Html.BeginForm())
{
    <div id="">
        @Html.AntiForgeryToken()
        @Html.ActionLink("Show All Records", "Select_WSIB", "Select", "", new { id = "select" })
        <br /> <br />
               <div class="" style="width:500px;margin:auto">
                   <hr />
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                   <div style="color:red">
                       * - Required fields
                   </div>
                   <p></p>
                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Date of Accident:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Date_Accident, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Location:<span style="color:red">*</span>
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.Location, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                           @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Employee Initials/SSLI:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Employee_Initials, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Cause of Accident:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Accident_Cause, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Date Modified Duties Commenced:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Date_Duties, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Actual Date Employee Returned to Regular Duties:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Date_Regular, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Number of Lost Days:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Lost_Days, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Number of Modified Days (Not Shadowed):
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Modified_Days_Not_Shadowed, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Number of Modified Days (Shadowed):
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Modified_Days_Shadowed, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Complete and File Form 7? Reed Group, if Applicable:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Form_7, new { htmlAttributes = new { @class = "form-control" } })
                       </div>
                   </div>
                   <p></p>
                   <div class="form-group">
                       <div class="col-md-offset-2 col-md-10">
                           <input type="submit" value="Add a New Record" class="btn btn-success" />
                       </div>
                   </div>
               </div>
    </div>
}

<div>
    @Html.ActionLink("Back to WOR Tabs", "WOR_Tabs", "Home", new { id = "back" })
</div>
