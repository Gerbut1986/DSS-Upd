<input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
<input type="submit" style="        background-color: darkorange;
        border-radius: 9px;
        color: black
" value="⌄" name="btn-downSort" />

<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr>
        <th>
            Date
        <th>
            <div style="width:250px">
                Location
            </div>
        </th>
        <th>
            Type Of Risk
        </th>
        <th>
            Descriptions
        </th>
        <th>
            Potential Risk
        </th>
        <th>
            MOH Visit
        </th>
        <th>
            Risk Legal Action
        </th>
        <th>
            Hot Alert
        </th>
        <th>
            Status Update
        </th>
        <th>
            Resolved
        </th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DSS.BLL.DTO.Community_Risks_DTO>)ViewBag.List;
        foreach (var item in list)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @names[item.Location - 1]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type_Of_Risk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descriptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Potential_Risk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MOH_Visit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Risk_Legal_Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hot_Alert)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status_Update)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resolved)
                </td>
                
                <td id="btns">
                    <div style="width:200px">
                        @Html.ActionLink("Edit", "Edit_Community", "Edit", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Details", "Community_Details", "Details", new { id = item.Id }, new { @class = "b" })
                        @Html.ActionLink("Delete", "Community_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                    </div>
                </td>
            </tr>
        }
    }

</table>
<style>
    #btns {
        width: 300px;
    }

    .b {
        color: darkorange;
        padding: 6px;
        font-weight: bold;
        text-align: center;
        border: 1px solid darkorange;
        border-radius: 9px;
        font-size: medium;
    }

        .b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }
</style>



