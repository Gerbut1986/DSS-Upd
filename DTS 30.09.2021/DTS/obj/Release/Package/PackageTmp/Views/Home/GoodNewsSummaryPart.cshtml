


<h2 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h2>



@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h2 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h2>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:small">
                <th scope="col">
                    <label>Category</label>
                </th>
                <th scope="col">
                    <label>Department</label>
                </th>
                <th scope="col">
                    <label>Source Compliment</label>
                </th>
                <th scope="col">
                    <label>Received From</label>
                </th>
                <th scope="col">
                    <label>Description Compliment</label>
                </th>
                <th scope="col">
                    <label>Respect</label>
                </th>
                <th scope="col">
                    <label>Passion</label>
                </th>
                <th scope="col">
                    <label>Teamwork</label>
                </th>
                <th scope="col">
                    <label>Responsibility</label>
                </th>
                <th scope="col">
                    <label>Growth</label>
                </th>
                <th scope="col">
                    <label>Compliment</label>
                </th>
                <th scope="col">
                    <label>Spot Awards</label>
                </th>
                <th scope="col">
                    <label>Awards Details</label>
                </th>
                <th scope="col">
                    <label>Name Awards</label>
                </th>
                <th scope="col">
                    <label>Awards Received</label>
                </th>
                <th scope="col">
                    <label>Community Inititives</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.GoodNewsSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                    <tr style="font-size:small;color:black">
                        <td scope="row">@ci.Category</td>
                        <td scope="row">@ci.Department</td>
                        <td scope="row">@ci.SourceCompliment</td>
                        <td scope="row">@ci.ReceivedFrom</td>
                        <td scope="row">@ci.Description_Complim</td>
                        <td scope="row">@ci.Respect</td>
                        <td scope="row">@ci.Passion</td>
                        <td scope="row">@ci.Teamwork</td>
                        <td scope="row">@ci.Responsibility</td>
                        <td scope="row">@ci.Growth</td>
                        <td scope="row">@ci.Compliment</td>
                        <td scope="row">@ci.Spot_Awards</td>
                        <td scope="row">@ci.Awards_Details</td>
                        <td scope="row">@ci.NameAwards</td>
                        <td scope="row">@ci.Awards_Received</td>
                        <td scope="row">@ci.Community_Inititives</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h2 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h2>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Category</label>
                    </th>
                    <th scope="col">
                        <label>Department</label>
                    </th>
                    <th scope="col">
                        <label>Source Compliment</label>
                    </th>
                    <th scope="col">
                        <label>Received From</label>
                    </th>
                    <th scope="col">
                        <label>Description Compliment</label>
                    </th>
                    <th scope="col">
                        <label>Respect</label>
                    </th>
                    <th scope="col">
                        <label>Passion</label>
                    </th>
                    <th scope="col">
                        <label>Teamwork</label>
                    </th>
                    <th scope="col">
                        <label>Responsibility</label>
                    </th>
                    <th scope="col">
                        <label>Growth</label>
                    </th>
                    <th scope="col">
                        <label>Compliment</label>
                    </th>
                    <th scope="col">
                        <label>Spot Awards</label>
                    </th>
                    <th scope="col">
                        <label>Awards Details</label>
                    </th>
                    <th scope="col">
                        <label>Name Awards</label>
                    </th>
                    <th scope="col">
                        <label>Awards Received</label>
                    </th>
                    <th scope="col">
                        <label>Community Inititives</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.GoodNewsSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].LocationName == l)
                        {
                            <tr style="font-size:small;color:black">
                                <td scope="row">@Html.DisplayFor(m => list[ci].Category)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Department)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].SourceCompliment)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].ReceivedFrom)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Description_Complim)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Respect)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Passion)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Teamwork)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Responsibility)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Growth)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Compliment)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Spot_Awards)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Awards_Details)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].NameAwards)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Awards_Received)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Community_Inititives)</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or another records for summary does NOT exist in the table...</h3>
}






