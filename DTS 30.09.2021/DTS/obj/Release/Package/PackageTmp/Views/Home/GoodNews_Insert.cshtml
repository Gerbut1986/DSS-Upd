@model DSS.BLL.DTO.Good_News_DTO

@{ 
    ViewBag.Title = "GoodNews_Insert";
}

<h1 style="color:darkorange;font-weight:bold;text-align:center">Good News - Entry Form</h1>
<br />
<br />
@using (Html.BeginForm())
{
    <div id="center">
        @Html.AntiForgeryToken()
        @Html.ActionLink("Show All Records", "Select_GoodNews", "Select", "", new { id = "select" })
        <br /> <br />
               <div class="" style="width:500px;margin:auto">
                   <hr />
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                   <div style="color:red">
                       * - Required fields
                   </div>
                   <p></p>
                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Date of News:<span style="color:red">*</span>
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.DateNews, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.DateNews, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">Location:<span style="color:red">*</span>
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.Location, ViewBag.locations[0] as SelectList, "", new { @class = "form-control" })
                           @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Category (Good News/Compliment):
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.Category, ViewBag.locations[1] as SelectList, "", new { @class = "form-control" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Department:
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.Department, ViewBag.locations[2] as SelectList, "", new { @class = "form-control" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Source of Compliment:
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.SourceCompliment, ViewBag.locations[3] as SelectList, "", new { @class = "form-control" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Received From:
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.ReceivedFrom, ViewBag.locations[4] as SelectList, "", new { @class = "form-control" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Description of Compliment / Recognition:
                       </label>
                       <div class="col-md-10">
                           @Html.TextAreaFor(model => model.Description_Complim, new { @class = "form-control" })
                           @*@Html.EditorFor(model => model.Description_Complim, new { htmlAttributes = new { @class = "form-control" } })*@
                           @Html.ValidationMessageFor(model => model.Description_Complim, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Respect:
                       </label>
                       <div class="col-md-10">
                           <div class="checkbox">
                               @Html.EditorFor(model => model.Respect)
                               @Html.ValidationMessageFor(model => model.Respect, "", new { @class = "text-danger" })
                           </div>
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Passion:
                       </label>
                       <div class="col-md-10">
                           <div class="checkbox">
                               @Html.EditorFor(model => model.Passion)
                               @Html.ValidationMessageFor(model => model.Passion, "", new { @class = "text-danger" })
                           </div>
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Teamwork:
                       </label>
                       <div class="col-md-10">
                           <div class="checkbox">
                               @Html.EditorFor(model => model.Teamwork)
                               @Html.ValidationMessageFor(model => model.Teamwork, "", new { @class = "text-danger" })
                           </div>
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Responsibility:
                       </label>
                       <div class="col-md-10">
                           <div class="checkbox">
                               @Html.EditorFor(model => model.Responsibility)
                               @Html.ValidationMessageFor(model => model.Responsibility, "", new { @class = "text-danger" })
                           </div>
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Growth:
                       </label>
                       <div class="col-md-10">
                           <div class="checkbox">
                               @Html.EditorFor(model => model.Growth)
                               @Html.ValidationMessageFor(model => model.Growth, "", new { @class = "text-danger" })
                           </div>
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Compliment / Picture Communicated to SSO Marketing?:
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.Department, ViewBag.locations[5] as SelectList, "", new { @class = "form-control" })
                           @Html.ValidationMessageFor(model => model.Compliment, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Spot Awards:
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.Spot_Awards, ViewBag.locations[5] as SelectList, "", new { @class = "form-control" })
                           @Html.ValidationMessageFor(model => model.Spot_Awards, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Spot Awards Details:
                       </label>
                       <div class="col-md-10">
                           @Html.TextAreaFor(model => model.Awards_Details, new { @class = "form-control" })
                           @*@Html.EditorFor(model => model.Awards_Details, new { htmlAttributes = new { @class = "form-control" } })*@
                           @Html.ValidationMessageFor(model => model.Awards_Details, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Name of External Award that was Applied For:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.NameAwards, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.NameAwards, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Awards Received (Yes / No):
                       </label>
                       <div class="col-md-10">
                           @Html.DropDownListFor(model => model.Awards_Received, ViewBag.locations[5] as SelectList, "", new { @class = "form-control" })
                           @Html.ValidationMessageFor(model => model.Awards_Received, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group">
                       <label class = "control-label col-md-12" style="font-weight:bold">
                           Description of Community Initiatives as per KPI:
                       </label>
                       <div class="col-md-10">
                           @Html.EditorFor(model => model.Community_Inititives, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.Community_Inititives, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <p></p>
                   <div class="form-group">
                       <div class="col-md-offset-2 col-md-10">
                           <input type="submit" value="Add a New Record" class="btn btn-success" />
                       </div>
                   </div>
               </div>
    </div>
}
<div>
    @Html.ActionLink("Back to WOR Tabs", "WOR_Tabs", "Home", new { id = "back" })
</div>
<style>
    #center {
        /*width: 650px;
        margin: auto;
        border: 1px black solid;
        position: relative;*/
        padding: 17px;
        /*border-radius: 22px;*/
    }

    #back {
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        background-color: none;
        color: brown
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #select {
        border: 2px solid darkorange;
        color: darkorange;
        position: absolute;
        border-radius: 22px;
        padding: 7px;
        text-decoration: none;
    }

        #select:hover {
            background-color: darkorange;
            color: white;
        }
</style>



