@model DSS.BLL.DTO.WorkshopBCInspection_DTO

@{
    ViewBag.Title = "Edit Worksave BC Inspections";
}


<h1 style="text-align:center;font-weight:bold;color:darkorange">Worksafe BC Inspections - Edit Form</h1>
@Html.ActionLink("Show All Records", "Select_WorksaveBC", "Select", "", new { id = "select" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="" style="width:500px;margin:auto">
    <h3 style="text-align:center;color:red">@ViewBag.Empty</h3>
    <br />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div style="color:red">
        * - Required fields
    </div>
    <p></p>
    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Date:<span style="color:red">*</span>
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Location:<span style="color:red">*</span>
        </label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CareComName, ViewBag.locations as SelectList, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CareComName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Inspection Report #:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.InspecteReport, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Scope of Inspection:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ScopeOfInspectiont, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            No Orders:
        </label>
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.NoOrders, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <br /><label style="font-size:large">Orders:</label><br />
    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Regulations Cited:
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Orders, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12" style="font-weight:bold">
            Brief Description of the Findings of the Order:
        </label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.BriefDescFind, new { @class = "form-control" })
        </div>
    </div>

    <br /><br />
    <div style="padding:16px;border:1px solid;border-radius:12px;width:450px">

        <div class="form-group">
            <label class="control-label col-md-12"> Action Plan:</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ActionPlan, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ActionPlan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12"> Responsibility:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Responsibility, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Responsibility, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12"> Action Date:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ActionDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActionDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12"> Status of the Order:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StatusOfTheOrder, ViewBag.ScopeInspect as SelectList, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ActionDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
    </div>
    <div class="form-group" style="margin-top:10px">
        <div class="col-md-offset-2 col-md-10" style="width:190px;margin:auto">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
</div>
}


<div>
    <a id="back" href="~/Home/WOR_Tabs">Back to WOR Tabs</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    label {
        font-weight: bold;
    }

    #back {
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        background-color: none;
        color: brown
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #select {
        border: 2px solid darkorange;
        position: absolute;
        border-radius: 22px;
        padding: 7px;
        text-decoration: none;
        color: darkorange;
    }

        #select:hover {
            background-color: darkorange;
            color: white;
        }
</style>







