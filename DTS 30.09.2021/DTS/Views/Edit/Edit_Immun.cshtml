@model DSS.BLL.DTO.Immunization_DTO

@{
    ViewBag.Title = "Edit_Immun";
}

<h1 style="text-align:center;color:darkorange;color:darkorange;font-weight:bold">Immunization - Edit Form</h1>

@using (Html.BeginForm())
{
    <div id="">
        @Html.AntiForgeryToken()
        <div style="width:500px;margin:auto">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div style="color:red">
                * - Required fields
            </div>
            <p></p>
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">Location:*</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Location, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">Total Number of Residents in the Community:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Numb_Res_Comm, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Numb_Res_Comm, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">Number of Residents Immunized:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Numb_Res_Immun, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Numb_Res_Immun, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">Number of Residents Not Immunized:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Numb_Res_Not_Immun, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Numb_Res_Not_Immun, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">% of Residents Immunized:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Per_Res_Immun, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Per_Res_Immun, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-12" style="font-weight:bold">% of Residents Not Immunized:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Per_Res_Not_Immun, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Per_Res_Not_Immun, "", new { @class = "text-danger" })
                </div>
            </div>
            <p></p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class= "btn btn-success"/>
                </div>
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to All Records", "Select_Immunization", "Select", "", new { id = "backBtn" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


