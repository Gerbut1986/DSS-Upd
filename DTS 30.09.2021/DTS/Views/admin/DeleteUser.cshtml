@model DTS.Models.ApplicationUser

@{
    ViewBag.Title = "DeleteUser";
}

<h2 style="text-align:center;font-family:'Palatino Linotype';color:darkorange;font-weight:bold">User Delete</h2>
@{
    int i = 0;
    <h1 style="text-align:center;color:white;background-color:black">Are you sure you want to delete this?</h1>
    <div id="center">
        <h5 style="text-align:center;color:darkorange">User <br /> ID - @Html.DisplayFor(id => id.Id)</h5>
        <dl class="dl-horizontal">
            <dt>
                First Name:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                Last Name:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                Position:
            </dt>

            <dd>
                <span hidden>@i  = @Html.DisplayFor(model => model.Position) - 1;</span>
                @ViewBag.positions[i]
            </dd>

            <dt>
                Care Community:
            </dt>

            <dd>
                <span hidden>
                    @i  = @Html.DisplayFor(model => model.Care_Community) - 1;
                   </span>
                    @ViewBag.locations[i]
</dd>

            <dt>
                Date Register:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateRegister)
            </dd>

            <dt>
                Role:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Role)
            </dd>

            <dt>
                Region:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Region)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div id="cent" class="form-actions no-color">
                <input id="centBtn" type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
}

@Html.ActionLink("Back to List", "GetAllUsers", "admin", "", new { id = "back" })


<style>
    #cent, #centBtn {
        width: 200px;
        margin: auto;
    }

    #btn {
        font-size: large;
    }

    #back {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        background-color: aqua;
        color: blue;
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #center {
        width: 370px;
        margin: auto;
        border: 1px black solid;
        position: relative;
        padding: 17px;
        border-radius: 22px;
    }
</style>