            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12" style="font-weight:bold">
                Total Residents Affected:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Total_Residents_Affected, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12" style="font-weight:bold">
                Total Staff Affected:
