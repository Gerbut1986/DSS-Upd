            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Notify_MOL, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12" style="font-weight:bold">
                Credit for Lost Days:
            </label>
            <div class="col-md-10">
