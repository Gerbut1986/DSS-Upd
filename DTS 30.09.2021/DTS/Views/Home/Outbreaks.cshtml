            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12" style="font-weight:bold">
                Type of Outbreak:
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type_of_Outbreak, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12" style="font-weight:bold">
                Total Days Closed:
            </label>
            <div class="col-md-10">
