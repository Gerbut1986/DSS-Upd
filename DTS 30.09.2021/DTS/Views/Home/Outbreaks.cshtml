            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Strain_Identified, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12" style="font-weight:bold">
                Deaths Due:
            </label>
            <div class="col-md-10">
