@model DSS.BLL.DTO.Outbreaks_DTO

@{
    ViewBag.Title = "Outbreaks";
}

@using (Html.BeginForm())
{
<div id="">
    @Html.AntiForgeryToken()
    @Html.ActionLink("Show All Records", "Outbreaks", "Select", "", new { id = "select" })
    
    <h1 style="color:darkorange;font-weight:bold;text-align:center">Outbreaks - Entry Form</h1>
    <div cclass="" style="width:500px;margin:auto" id="center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="color:red">
            * - Required fields
        </div>
        <p></p>
        <div class="form-group">
            <label class="control-label col-md-12" style="font-weight:bold">
                Date Declared:<span>*</span>
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Declared, new { htmlAttributes = new { @class = "form-control" } })
