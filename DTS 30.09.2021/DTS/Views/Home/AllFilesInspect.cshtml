


@{
    ViewBag.Title = "AllFiles";
}

@if (ViewBag.Check == true)
{
    <h5 style="color:darkorange;font-weight:bold;text-align:center">All Uploaded Files</h5>
    using (Html.BeginForm())
    {
        foreach (var item in (IEnumerable<string>)ViewBag.Files)
        {
            <div id="frame" class="row">
                <a class="col-sm-3" style="width:250px;margin:0 0 0 0;font-size:medium" id="itm" href="~/Uploaded_Files/@item">@item</a>
                <div class="col-sm-3">
                    @Html.ActionLink($"Delete", "DeleteFileInspect", "Home", new { item = item }, new { id = "filename", onclick = "return confirm('Are you sure you want to delete this File?');" })
                </div>
            </div>
        }
    }

}
else
{
    <h6 style="text-align:center;color:red;border-radius:15px;border:1px solid red;font-size:large; padding:19px">@ViewBag.Empty</h6>
}



<style>

    #back:hover {
        background-color: blue;
        color: white;
        font-weight: bold;
    }

    #itm {
        font-size: large;
    }

    #frame {
        border: 0.5px solid blue;
        border-radius: 9px;
        padding: 16px;
        margin-top: 5px;
    }

    #filename {
        margin: 0 0 0 0;
        float: left;
        padding:5px;
        width: 65px;
        text-decoration: none;
        border: 1px solid red;
        border-radius: 18px;
        color: white;
        background-color: red;
        font-size: larger;
    }

        #filename:hover {
            border: 1px solid red;
            background-color: white;
            color: red;
        }
</style>





