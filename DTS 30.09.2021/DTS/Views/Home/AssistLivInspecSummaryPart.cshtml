



<h3 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h3>


@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h3 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h3>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:medium">
                <th scope="col">
                    <label>Inspect Complaint</label>
                </th>
                <th scope="col">
                    <label>Inspect Type Reason</label>
                </th>
                <th scope="col">
                    <label>No Finding</label>
                </th>
                <th scope="col">
                    <label>  Assisted Living Regulation</label>
                </th>
                <th scope="col">
                    <label> Community Care and Assisted Living Act</label>
                </th>
                <th scope="col">
                    <label>Section of the Act or Regulation</label>
                </th>
                <th scope="col">
                    <label>Subsection of the Act or Regulation</label>
                </th>
                <th scope="col">
                    <label>Category</label>
                </th>
                <th scope="col">
                    <label>Brief Description of the Finding/Observation</label>
                </th>
                <th scope="col">
                    <label>Action Plan</label>
                </th>
                <th scope="col">
                    <label>Responsibility</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.AssistLivInspectSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                        <tr style="font-size:small;color:black">
                            <td scope="row">@ci.InspectComplaint</td>
                            <td scope="row">@ci.InspectTypeReason</td>
                            <td scope="row">@ci.NoFinding</td>
                            <td scope="row">@ci.AssistLivReg</td>
                            <td scope="row">@ci.AssistLivAct</td>
                            <td scope="row">@ci.ActOrReg</td>
                            <td scope="row">@ci.SubActOrReg</td>
                            <td scope="row">@ci.Category</td>
                            <td scope="row">@ci.BriefDescOfFinding</td>
                            <td scope="row">@ci.ActionPlan</td>
                            <td scope="row">@ci.Responsibility</td>
                        </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h3 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h3>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Inspect Complaint</label>
                    </th>
                    <th scope="col">
                        <label>Inspect Type Reason</label>
                    </th>
                    <th scope="col">
                        <label>No Finding</label>
                    </th>
                    <th scope="col">
                        <label>  Assisted Living Regulation</label>
                    </th>
                    <th scope="col">
                        <label> Community Care and Assisted Living Act</label>
                    </th>
                    <th scope="col">
                        <label>Section of the Act or Regulation</label>
                    </th>
                    <th scope="col">
                        <label>Subsection of the Act or Regulation</label>
                    </th>
                    <th scope="col">
                        <label>Category</label>
                    </th>
                    <th scope="col">
                        <label>Brief Description of the Finding/Observation</label>
                    </th>
                    <th scope="col">
                        <label>Action Plan</label>
                    </th>
                    <th scope="col">
                        <label>Responsibility</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.AssistLivInspectSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].CareComName == l)
                        {
                                <tr style="font-size:small;color:black">
                                    <td scope="row">@Html.DisplayFor(m => list[ci].InspectComplaint)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].InspectTypeReason)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].NoFinding)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].AssistLivReg)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].AssistLivAct)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].ActOrReg)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].SubActOrReg)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Category)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].BriefDescOfFinding)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].ActionPlan)</td>
                                    <td scope="row">@Html.DisplayFor(m => list[ci].Responsibility)</td>
                                </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or another records for summary does NOT exist in the table...</h3>
}











