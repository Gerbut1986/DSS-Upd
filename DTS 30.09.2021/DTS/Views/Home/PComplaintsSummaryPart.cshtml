
<h3 style="text-align:center;color:darkorchid">@ViewBag.ObjName (Records Found - <span style="color:gold">@ViewBag.Count</span>) for <span style="color:crimson">@ViewBag.LocInfo</span></h3>


@if (ViewBag.Check1 == true && ViewBag.EmptLocation == true)
{
    <h3 style="text-align:center;color:tomato;font-family:'Palatino Linotype';font-weight:bold">
        Summary For All Locations:
    </h3>
    <table class="table table-bordered" style="">
        <thead>
            <tr style="font-size:small">
                <th scope="col">
                    <label>Status</label>
                </th>
                <th scope="col">
                    <label>Complain Filed By</label>
                </th>
                <th scope="col">
                    <label>Type Of Complaint</label>
                </th>
                <th scope="col">
                    <label>
                        Is Complaint Resolved
                    </label>
                </th>
                <th scope="col">
                    <label>Description/Outcome</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<DSS.BLL.PartialModels.PComplaintsSummaryAll> arr = ViewBag.TotalSummary;
                foreach (var ci in arr)
                {
                    <tr style="font-size:small;color:black">
                        <td scope="row">@ci.Status</td>
                        <td scope="row">@ci.Complain_Filed_By</td>
                        <td scope="row">@ci.Type_of_Complaint</td>
                        <td scope="row">@ci.Is_Complaint_Resolved</td>
                        <td scope="row">@ci.Description_Outcome</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    foreach (var l in ViewBag.Locations)
    {
        <h3 style="text-align:center;color:darkorange;font-family:'Times New Roman'">@l</h3>
        <table class="table table-bordered" style="">
            <thead>
                <tr style="font-size:small">
                    <th scope="col">
                        <label>Status</label>
                    </th>
                    <th scope="col">
                        <label>Complain Filed By</label>
                    </th>
                    <th scope="col">
                        <label>Type Of Complaint</label>
                    </th>
                    <th scope="col">
                        <label>
                            Is Complaint Resolved
                        </label>
                    </th>
                    <th scope="col">
                        <label>Description/Outcome</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<DSS.BLL.PartialModels.PComplaintsSummary> list = ViewBag.GN_Found;
                    for (int ci = 0; ci < list.Count; ci++)
                    {
                        if (list[ci].LocationName == l)
                        {
                            <tr style="font-size:small;color:black">
                                <td scope="row">@Html.DisplayFor(m => list[ci].Status)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Complain_Filed_By)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Type_of_Complaint)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Is_Complaint_Resolved)</td>
                                <td scope="row">@Html.DisplayFor(m => list[ci].Description_Outcome)</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
}
else
{
    <h3 style="font-family:'Palatino Linotype';color:red">Locations or another records for summary does NOT exist in the table...</h3>
}









