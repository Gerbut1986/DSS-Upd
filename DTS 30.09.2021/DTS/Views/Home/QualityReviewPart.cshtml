
<input type="submit" style="background-color:darkorange;border-radius:9px;color:black" value="^" name="btn-upSort" />
<input type="submit" style="        background-color: darkorange;
        border-radius: 9px;
        color: black
" value="⌄" name="btn-downSort" />

<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr>
        <th>
            <div style="width:300px">
                Location
            </div>
        </th>
        <th>
            Date
        </th>
        <th>
            Standard
        </th>
        <th>
            <div style="width:330px">
                Brief Description of the Findings</div>
        </th>
        <th>
            <div style="width:330px">
                Brief Description of the Recommendations</div>
        </th>
        <th>
            <div style="width:250px">
                Action Plan
            </div>          
        </th>
        <th>
            Responsibility
        </th>
        <th>
            Action Date
        </th>
        <th></th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DSS.BLL.DTO.QualityReview_DTO>)ViewBag.List;
        foreach (var item in list)
        {
        <tr>
            <td>
                @names[item.CareComName - 1]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Outcomes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BriefDescFind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BriefDescRecommend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActionDate)
            </td>
            <td>
                <div style="width:200px;">
                    @Html.ActionLink("Edit", "Edit_QualityReview", "Edit", new { id = item.Id }, new { id = "b" })
                    @Html.ActionLink("Details", "Details_QualityReview", "Details", new { id = item.Id }, new { id = "b" })
                    @Html.ActionLink("Delete", "Delete_QualityReview", "Delete", new { id = item.Id }, new { id = "b" })
                </div>
            </td>
        </tr>
        }
    }

</table>
<style>
    #btns {
        width: 300px;
    }

    #b {
        color: darkorange;
        padding: 6px;
        border: 1px solid darkorange;
        border-radius: 9px;
        font-size: medium;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
    }

        #b:hover {
            border: 1px solid darkorange;
            padding: 5px;
            color: white;
            background-color: darkorange;
            text-decoration: none;
            border-radius: 10px;
        }
</style>





