        </dt>

        <dd>
            @Html.DisplayFor(model => model.Docs_Submitted_Finance)
        </dd>

    </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div id="cent" class="form-actions no-color">
                <input id="centBtn" type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
</div>

@Html.ActionLink("Back to All Records", "Outbreaks", "Select", "", new { id = "back" })


<style>
    #cent, #centBtn {
        width: 200px;
        margin: auto;
    }

    #btn {
        font-size: large;
    }

    #back {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        color: blue;
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
