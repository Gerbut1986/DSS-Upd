@model DSS.BLL.DTO.Outbreaks_DTO

@{
    ViewBag.Title = "Outbreaks_Delete";
}

<h2 style="text-align: center;color: darkorange;font-weight: bold">Outbreaks - Delete Form</h2>

<h1 style="text-align:center;color:white;background-color:black">Are you sure you want to delete this record?</h1>
<div id="center">
    @*<h1 style="text-align:center;color:darkorange">Outbreaks <br /> ID - @Html.DisplayFor(id => id.Id)</h1>*@

    <dl class="dl-horizontal">
        <dt>
            Date Declared:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_Declared)
        </dd>

        <dt>
            Date Concluded:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_Concluded)
        </dd>

        <dt>
            Type of Outbreak:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type_of_Outbreak)
        </dd>

        <dt>
            Total Days Closed:          
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total_Days_Closed)
        </dd>

        <dt>
            Total Residents Affected:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total_Residents_Affected)
        </dd>

        <dt>
            Total Staff Affected:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total_Staff_Affected)
        </dd>

        <dt>
            Strain Identified:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Strain_Identified)
        </dd>

        <dt>
            Deaths Due to this Outbreak:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Deaths_Due)
        </dd>

        <dt>
            CI Report Submitted:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CI_Report_Submitted)
        </dd>

        <dt>
            Notify MOL if Staff has Become Ill due to Outbreak:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notify_MOL)
        </dd>

        <dt>
            Credit for Lost Days - Total # of Days of Credit:
